# ==============================================================================
# AI SaaS Starter Kit - Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# ==============================================================================

# ==============================================================================
# APPLICATION
# ==============================================================================
NODE_ENV=development
# NODE_ENV=production  # Use this in production

# ==============================================================================
# AUTHENTICATION (Better Auth)
# ==============================================================================
# Generate a secure secret with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-random-secret-key-minimum-32-characters-long-use-openssl-rand

# Base URL of your application
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Google OAuth (Optional)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret

# ==============================================================================
# DATABASE
# ==============================================================================
# For production: Get from Neon project dashboard (https://neon.tech)
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_saas_dev

# For local development with Docker:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_saas_dev

# For Neon (production):
# DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# ==============================================================================
# PAYMENTS (Polar)
# ==============================================================================
# Get your credentials from: https://polar.sh/settings
POLAR_ACCESS_TOKEN=polar_at_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
POLAR_WEBHOOK_SECRET=polar_wh_sec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
POLAR_SUCCESS_URL=http://localhost:3000/success?checkout_id={CHECKOUT_ID}

# Product IDs for subscription plans
# Create these in your Polar dashboard
POLAR_PRODUCT_FREE=prod_xxxxxxxxxxxxxxxxxxxxxxxx
POLAR_PRODUCT_PRO=prod_xxxxxxxxxxxxxxxxxxxxxxxx
POLAR_PRODUCT_STARTUP=prod_xxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================================================
# EMAIL (Resend)
# ==============================================================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_SENDER_EMAIL=noreply@yourdomain.com

# ==============================================================================
# AI INTEGRATION (OpenAI)
# ==============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================================================
# SECURITY
# ==============================================================================
# Encryption key for API keys and sensitive data
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Arcjet (Rate limiting and bot protection)
# Get your key from: https://arcjet.com
ARCJET_KEY=ajkey_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================================================
# ANALYTICS (PostHog - Optional but Recommended)
# ==============================================================================
# Get your API key from: https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
# For EU: https://eu.i.posthog.com

# ==============================================================================
# ERROR MONITORING (Sentry - Optional but Recommended)
# ==============================================================================
# Get your configuration from: https://sentry.io
SENTRY_ORG=your-organization-slug
SENTRY_PROJECT=your-project-slug
SENTRY_AUTH_TOKEN=sntrys_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@o0000000.ingest.sentry.io/0000000
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@o0000000.ingest.sentry.io/0000000

# ==============================================================================
# ADDITIONAL CONFIGURATION (Advanced)
# ==============================================================================
# Uncomment and configure these if needed:

# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Custom API URL (if using separate backend)
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Feature Flags
# NEXT_PUBLIC_ENABLE_FEATURE_X=true

# Logging Level
# LOG_LEVEL=info  # Options: error, warn, info, debug

# ==============================================================================
# DEVELOPMENT ONLY
# ==============================================================================
# These variables are only used in development mode

# Skip email verification in development
# SKIP_EMAIL_VERIFICATION=true

# Enable debug logging
# DEBUG=true

# Disable rate limiting in development
# DISABLE_RATE_LIMITING=true
